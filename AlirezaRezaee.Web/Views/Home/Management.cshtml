@{
    ViewData["Title"] = "مدیریت";
}

<div class="container my-5">
    <div class="row links rounded justify-content-center mb-3" style="margin-top: 2rem;">
        <div class="col-12 col-sm-6 col-lg-4">
            <div class="my-2">
                <div style="border-bottom-left-radius: 0; border-bottom-right-radius: 0;">
                    <a asp-action="CreateArticle" asp-controller="Posts" class="btn btn-block btn-light my-0 rounded-0 font-weight-light">
                        افزودن مقاله
                    </a>
                    <a asp-action="CreateShare" asp-controller="Posts" class="btn btn-block btn-light my-0 rounded-0 font-weight-light">
                        افزودن بازنشر رسانه
                    </a>
                    <a asp-action="CreateMarkdown" asp-controller="Posts" class="btn btn-block btn-light my-0 rounded-0 font-weight-light">
                        افزودن مطلب نشانه‌دار
                    </a>
                    <a asp-action="Index" asp-controller="Tags" class="btn btn-block btn-light my-0 rounded-0 font-weight-light">
                        برچسب ها
                    </a>
                </div>

                <div class="position-relative">
                    <div class="d-flex links-content links-item">
                        <a asp-controller="Posts" asp-action="Index" target="_blank" rel="noreferrer noopener" class="links-site-link links-link p-2 rounded-0" style="z-index: 2;">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-box-arrow-in-up-right" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
