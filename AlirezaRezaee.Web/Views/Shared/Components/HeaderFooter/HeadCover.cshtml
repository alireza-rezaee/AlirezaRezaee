@model Rezaee.Alireza.Web.Models.ViewModels.HeaderFooter.HeadCoverViewModel
<div id="header" class="text-center" style="margin-bottom: calc(5rem + 26px);">
    <div id="hnav-besm" class="mx-auto py-2"></div>
    <div class="container h-100 text-right">
        <div class="cover h-100 rounded" style="background-image: url(@Model.CoverPath);"></div>
        <nav id="hnav">
            <div class="cover-avatar d-inline-block">
                <picture>
                    <source media="(min-width: 992px)" srcset="@Model.AvatarPath_150px">
                    <source media="(min-width: 768px)" srcset="@Model.AvatarPath_125px">
                    <source media="(min-width: 576px)" srcset="@Model.AvatarPath_100px">
                    <img src="@Model.AvatarPath_64px" alt="@Model.FullName" class="rounded-circle h-100 img-fluid">
                </picture>
            </div>
            <div id="hnav-list" class="d-flex pr-0 mb-0 rounded-bottom position-relative">
                <a href="/"><img src="@Model.IllustratedNamePath" alt="@Model.FullName"></a>
                <partial name="_HeadNavPartial" />
            </div>
        </nav>
    </div>
</div>
<div style="height: 1px;"></div>
