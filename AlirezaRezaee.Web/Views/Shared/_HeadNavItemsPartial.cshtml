@using Microsoft.AspNetCore.Identity
@using Rezaee.Alireza.Web.Helpers
@inject SignInManager<Rezaee.Alireza.Web.Areas.Identity.Data.ApplicationUser> SignInManager
@inject UserManager<Rezaee.Alireza.Web.Areas.Identity.Data.ApplicationUser> UserManager
@{
    var user = await UserManager.GetUserAsync(User);
}
@addTagHelper *, Rezaee.Alireza.Web

<li class="d-block">
    <a asp-route="SiteIndex" class="p-2" style="line-height: 0;">
        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-house" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
