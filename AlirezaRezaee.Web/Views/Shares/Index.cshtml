@model IEnumerable<AlirezaRezaee.Web.Models.ViewModels.Shares.ShareSummary>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Summary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ThumbnailUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublishDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LatestUpdateDateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Summary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThumbnailUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublishDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LatestUpdateDateTime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ShareId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ShareId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ShareId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
