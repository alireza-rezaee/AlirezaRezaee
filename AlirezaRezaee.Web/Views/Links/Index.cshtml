@model Rezaee.Alireza.Web.Models.ViewModels.Links.IndexViewModel

@{

    ViewData["Title"] = "پیوند ها";
}


<div class="container my-5">
    <div class="row">
        <div class="col mb-3">
            <div class="d-inline-block py-1 px-3 section">
                <div class="d-inline-block align-middle section-bg">
                </div>
                پیوند ها
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-11">
            @if (Model.IllustratedLinks.Any() || Model.PlainLinks.Any())
            {
                if (Model.IllustratedLinks.Any())
                {
                    <div class="row links rounded justify-content-center">
                        @foreach (var illustratedLink in Model.IllustratedLinks)
                        {
                            <div class="col-12 col-sm-6 col-lg-4">
                                <div class="my-2 position-relative">
                                    <div class="bg-danger rounded-top links-cover" style="background-image: url(@illustratedLink.ImagePath);">
                                    </div>
                                    <div class="d-flex links-content links-item">
                                        <a href="@illustratedLink.Url" target="_blank" rel="noreferrer noopener" class="links-site-link links-link p-2 rounded-0" style="z-index: 2;">
                                            <i class="material-icons align-middle">language</i>
                                        </a>
                                        <a href="@illustratedLink.Url" class="links-link d-block p-2 w-100 stretched-link overflow-hidden">
                                            <i class="caption">@illustratedLink.Title</i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }

                if (Model.PlainLinks.Any())
                {
                    <div class="row links rounded justify-content-center mb-3" style="margin-top: 5rem;">
                        @foreach (var plainLink in Model.PlainLinks)
                        {
                            <div class="col-12 col-sm-6 col-lg-4">
                                <div class="my-2 position-relative">
                                    <div class="d-flex links-content links-item">
                                        <a href="@plainLink.Url" target="_blank" rel="noreferrer noopener" class="links-site-link links-link p-2 rounded-0" style="z-index: 2;">
                                            <i class="material-icons align-middle">language</i>
                                        </a>
                                        <a href="@plainLink.Url" class="links-link d-block p-2 w-100 stretched-link overflow-hidden">
                                            <i class="caption">@plainLink.Title</i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            }
            else
            {
                <div class="alert alert-warning show" role="alert">
                    هنوز لینکی ثبت نشده است!
                </div>
            }
        </div>
</div>
