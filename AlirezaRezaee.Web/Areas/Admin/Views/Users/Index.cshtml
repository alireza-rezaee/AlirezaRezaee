@using Rezaee.Alireza.Web.Extensions
@using Microsoft.AspNetCore.Identity
@addTagHelper *, Rezaee.Alireza.Web
@model IEnumerable<Rezaee.Alireza.Web.Areas.Identity.Data.ApplicationUser>
@inject SignInManager<Rezaee.Alireza.Web.Areas.Identity.Data.ApplicationUser> SignInManager
@inject UserManager<Rezaee.Alireza.Web.Areas.Identity.Data.ApplicationUser> UserManager
@{
    ViewData["Title"] = "نمایش کاربران";
    var user = await UserManager.GetUserAsync(User);
}


<br class="my-3" />
<h2 class="text-right">@ViewData["Title"] </h2>
<hr />
<div class="search-bar">
    <input type="text" id="search" placeholder="جستجوی کاربران (قسمتی از نام، نام خانوادگی یا نام کاربری را وارد نمایید)" class="form-control" /><div id="suggest"></div>
</div>

<hr />
@if (!Model.Any())
{
    <div class="alert alert-warning text-center">هیچ کاربری در سیستم ثبت نشده است.</div>
}
else
{
    <table class="table table-hover table-responsive text-center table-sm">
        <thead style="font-size:large">
            <tr>
                <td>ردیف</td>
                <td>تصویر نمایه</td>
                <td>نام کاربری</td>
                <td>نوع کاربری</td>
                <td>رایانامه</td>
                <td>نام</td>
                <td>نام خانوادگی</td>
                <td>جزییات</td>
                <td>حذف</td>
            </tr>
        </thead>
        <tbody>
            @{ var i = 1;}
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">@i.EnglishToPersian()</td>
                    <td class="align-middle">
                        @if (string.IsNullOrEmpty(item.ProfileImagePath))
                        {
                            <img-gravatar gravatar-size="50"
                                          gravatar-email="@await UserManager.GetEmailAsync(user)"
                                          alt="تصویر @item.FirstName @item.LastName"
                                          title="تصویر @item.FirstName @item.LastName"
                                          class="rounded-circle img-fluid"></img-gravatar>
                        }
                        else
                        {
                            <img src="@item.ProfileImagePath"
                                 alt="تصویر @item.FirstName @item.LastName"
                                 title="تصویر @item.FirstName @item.LastName"
                                 class="rounded-circle img-fluid"
                                 style="height: 50px !important; width: 50px !important;">
                        }
                    </td>
                    <td class="align-middle">@item.UserName</td>
                    <td class="align-middle">@(item.PasswordHash != null ? "محلی" : "خارجی")</td>
                    <td class="align-middle"><a href="mailto://@item.Email">@item.Email</a></td>
                    <td class="align-middle">@item.FirstName</td>
                    <td class="align-middle">@item.LastName</td>
                    <td class="align-middle">
                        <a asp-area="admin" asp-controller="users" asp-action="details" asp-route-id="@item.Id" class="btn btn-light text-primary">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-binoculars" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M3 2.5A1.5 1.5 0 0 1 4.5 1h1A1.5 1.5 0 0 1 7 2.5V5h2V2.5A1.5 1.5 0 0 1 10.5 1h1A1.5 1.5 0 0 1 13 2.5v2.382a.5.5 0 0 0 .276.447l.895.447A1.5 1.5 0 0 1 15 7.118V14.5a1.5 1.5 0 0 1-1.5 1.5h-3A1.5 1.5 0 0 1 9 14.5v-3a.5.5 0 0 1 .146-.354l.854-.853V9.5a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5v.793l.854.853A.5.5 0 0 1 7 11.5v3A1.5 1.5 0 0 1 5.5 16h-3A1.5 1.5 0 0 1 1 14.5V7.118a1.5 1.5 0 0 1 .83-1.342l.894-.447A.5.5 0 0 0 3 4.882V2.5zM4.5 2a.5.5 0 0 0-.5.5V3h2v-.5a.5.5 0 0 0-.5-.5h-1zM6 4H4v.882a1.5 1.5 0 0 1-.83 1.342l-.894.447A.5.5 0 0 0 2 7.118V13h4v-1.293l-.854-.853A.5.5 0 0 1 5 10.5v-1A1.5 1.5 0 0 1 6.5 8h3A1.5 1.5 0 0 1 11 9.5v1a.5.5 0 0 1-.146.354l-.854.853V13h4V7.118a.5.5 0 0 0-.276-.447l-.895-.447A1.5 1.5 0 0 1 12 4.882V4h-2v1.5a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5V4zm4-1h2v-.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5V3zm4 11h-4v.5a.5.5 0 0 0 .5.5h3a.5.5 0 0 0 .5-.5V14zm-8 0H2v.5a.5.5 0 0 0 .5.5h3a.5.5 0 0 0 .5-.5V14z" />
                            </svg>
                        </a>
                    </td>
                    <td class="align-middle">
                        <button class="btn btn-light text-danger" data-toggle="modal" data-target="#delete" data-id="@item.Id" data-fullname="@item.FirstName @item.LastName [@item.UserName]">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-trash" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                            </svg>
                        </button>
                    </td>
                </tr>
                i++;
            }
        </tbody>
    </table>


    <div class="modal fade text-right" id="delete" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <form asp-action="Delete">
                    <div class="modal-header">
                        <h5 class="modal-title">حذف کاربر</h5>
                        <button type="button" class="close ml-0 text-danger" data-dismiss="modal">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        آیا از حذف کاربر <div class="badge badge-pill badge-danger js-target-username"></div> اطمینان دارید؟
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-warning" data-dismiss="modal">انصراف</button>
                        <button type="submit" class="btn btn-danger">حذف نهایی</button>
                    </div>
                    <input type="hidden" name="id" />
                </form>
            </div>
        </div>
    </div>

}
<br class="my-3" />
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#search').on({
                'keyup': function () {
                    //check for minimum required length for search goes here
                    $.ajax({
                        method: 'get',
                        url: '@Url.Action("search", "users", new { area = "admin" })',
                        data: { q: $(this).val() },
                        success: function (d) {
                            $('.search-bar #suggest').css('display', 'block').empty();
                            var suggestElement = $('.search-bar #suggest');
                            for (var i in d) {

                                suggestElement
                                    .append('<div class="suggest-item"><a href="/Users/Details/' + d[i].id + '">'
                                        + '<img width="40" height="40" src="' + d[i].profileImagePath + '"> '
                                        + d[i].firstName + ' ' + d[i].lastName + ' [' + d[i].userName + ']' + '</a></div>');
                            }
                        }
                    });
                }
                , 'focusout': function () {
                    $('.search-bar #suggest').slideUp(function () {
                        $(this).empty();
                    });
                }
            });
        });

        $("#delete").on("show.bs.modal", function (e) {
            var user = $(e.relatedTarget);
            $(this).find('.js-target-username').text(user.data('fullname'));
            $(this).find('input[name=id]').val(user.data('id'));
        });

    </script>



}